<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardElevation="8dp"

    card_view:cardBackgroundColor = "#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="7dp"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_work_iv"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/userWorkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="标题"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/userWorkTime"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_below="@id/userWorkTitle"
                    android:text="shujiang khdksfdjlsjfdljsljfdljs"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/userWorkPrice"
                    android:singleLine="true"
                    android:layout_below="@+id/userWorkTitle"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/darker_gray"
                    android:text="价格"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView

                android:id="@+id/userWorkAddress"
                android:layout_width="wrap_content"
                android:text="付家庄国际312"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
